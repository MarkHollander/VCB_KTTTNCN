@using Qlud.KTTTNCN.Authorization
@using Qlud.KTTTNCN.Web.Areas.App.Models.BaoCaoQuanLyChungTu;
@using Qlud.KTTTNCN.Web.Areas.App.Startup
@{
ViewBag.CurrentPageName = AppPageNames.Host.BaoCaoQuanLyChungTus;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/BaoCaoQuanLyChungTus/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">
    <div class="row">
        <h1 class="col-md-12 text-center">@L("BaoCaoQuanLyChungTuKhauTruThueTNCN")</h1>
    </div>
    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="SoChungTuFilterId">@L("SoChungTu")</label>
                            <input type="text" class="form-control" name="soChungTuFilter" id="SoChungTuFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MaSoThueFilterId">@L("MaSoThue")</label>
                            <input type="text" class="form-control" name="maSoThueFilter" id="MaSoThueFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="HoTenFilterId">@L("HoTen")</label>
                            <input type="text" class="form-control" name="hoTenFilter" id="HoTenFilterId">
                        </div>
                    </div>
                    
                    
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="TrangThaiFilterId">@L("TrangThai")</label>
                            <input type="text" class="form-control" name="trangThaiFilter" id="TrangThaiFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="NgayLapFilterId">@L("NgayLap")</label>
                            <input type="datetime" class="form-control date-picker" name="ngayLapFilter" id="NgayLapFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="NgayDuyetFilterId">@L("NgayDuyet")</label>
                            <input type="datetime" class="form-control date-picker" name="ngayDuyetFilter" id="NgayDuyetFilterId">
                        </div>
                    </div>
                    

                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    @*<table id="ChungTuKTTsTable" class="display table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">*@
                    <table id="BaoCaoQuanLyChungTusTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap cell-border">
                        <thead>
                            <tr>                                
                                <th>@L("SoThuTu")</th>
                                <th>@L("MauSo")</th>
                                <th>@L("KyHieu")</th>
                                <th>@L("SoChungTu")</th>
                                <th>@L("MaSoThue")</th>
                                <th>@L("HoTen")</th>                                
                                <th>@L("Email")</th>                               
                                <th>@L("TrangThai")</th>
                                <th>@L("InPDF")</th>
                                <th>@L("XuatXML")</th>
                                <th>@L("PhimChucNang")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
   
